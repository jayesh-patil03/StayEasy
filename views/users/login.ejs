<% layout('/layouts/boilerplate') -%>
<body>
  <div class="row mt-4">
    <h1 class="col-4 offset-4">Login for StayEasy</h1>
    <div class="col-6 offset-3">
      <form action="/login" method="POST" class="needs-validation" novalidate>
        <div>
          <label for="username" class="form-label">Username</label>
          <input
            name="username"
            id="username"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Username should be valid</div>
        </div>

        <div>
          <label for="password" class="form-label">Password</label>
          <input
            name="password"
            id="password"
            type="password"
            class="form-control"
            required
          />
        </div>

        <button class="btn btn-success mt-3">Login</button>
      </form>
    </div>
  </div>
</body>
